{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "strict": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "newLine": "lf",
        "types": [
            "node",
            "vue"
        ],
        "paths": {
          "@/*": [
            "src/*"
          ],
          "*": [
            "types/*"
          ],
          "@uikit/*": [
            "vendors/titify/src/ui/uikit/*"
          ],
          "@widgets/*": [
            "vendors/titify/src/ui/widgets/*"
          ],
          "@views/*": [
            "vendors/titify/src/ui/views/*"
          ],
          "@testing/*": [
            "tests/*"
          ]
        },
        "plugins": [
            {
                "transform":"@zerollup/ts-transform-paths",
                "exclude": ["*"]
            }
        ],
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    }, 
      "exclude": [
          "node_modules",
          "dist"
      ]
}
